<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="general_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>

    <style name="general_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>

    <style name="source">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:textColor">@color/blueLink</item>
    </style>

    <style name="general_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="title_app">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/design_default_color_on_secondary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
    </style>

    <style name="info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/blueLink</item>
    </style>

    <style name="img_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>

    <style name="input" parent="input_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">64dp</item>
    </style>

    <style name="symptoms">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="IMCResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="resultNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="imgClose">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:contentDescription">@string/label_info</item>
    </style>

    <style name="titleIMC">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="formula">
        <item name="android:layout_width">305dp</item>
        <item name="android:layout_height">101dp</item>
        <item name="android:layout_marginTop">14dp</item>
    </style>

    <style name="sourceItalic" parent="source">
        <item name="android:textStyle">italic</item>
    </style>
</resources>